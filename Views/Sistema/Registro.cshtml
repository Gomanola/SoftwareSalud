@model SistemaCuidado.Models.ClaseUsuarios
@{
    ViewData["Title"] = "Registro";
}
<h1>Registro</h1>

<h4>Ingresa tus datos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registro" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo electrónico</label>
                <input asp-for="Correo" class="form-control" required/>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre(s)</label>
                <input asp-for="Nombre" class="form-control" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApePaterno" class="control-label">Apellido Paterno</label>
                <input asp-for="ApePaterno" class="form-control" required />
                <span asp-validation-for="ApePaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApeMaterno" class="control-label">Apellido Materno</label>
                <input asp-for="ApeMaterno" class=" form-control" required />
                <span asp-validation-for="ApeMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label">Contraseña</label>
                <input asp-for="Contraseña" class="form-control" type="password" required />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechNac" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechNac" class="form-control" type="date" required />
                <span asp-validation-for="FechNac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<span Class="text-danger">@ViewBag.Error</span>