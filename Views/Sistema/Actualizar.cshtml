@model SistemaCuidado.Models.ClaseUsuarios
<h4>ClaseUsuarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Actualizar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label">Peso (Kg)</label>
                <input asp-for="Peso" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Altura" class="control-label">Altura (m)</label>
                <input asp-for="Altura" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero">
                    <option value="Femenino">Femenino</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Sin especificar">Sin especificar</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Enfermedades" class="control-label">Ingresa tus padecimientos, enfermedades y/o sintomas</label>
                <input asp-for="Enfermedades" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="PáginaUsuarios">Cancelar</a>
</div>
